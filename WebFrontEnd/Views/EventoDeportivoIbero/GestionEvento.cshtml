            traditional: true,
            async: true,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#idDeportista').empty();
                debugger
                if (data.ok) {
                    $(data.deportistas).each(function (i) {
                        $('#idDeportista').append($('<option>', {
                            value: data.deportistas[i].idTex,
                            text: data.deportistas[i].nombre,
                        }));
                    });

                } 
