                'Authorization': 'Bearer '
                    + localStorage.getItem("accessToken")
            },
            success: function (data) {
                $('#idArbitro').empty();
                
                if (data.ok) {
                    $(data.arbitros).each(function (i) {
                        $('#idArbitro').append($('<option>', {
